<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    >
    <ImageView
        android:id="@+id/atclog"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/atc"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="70dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/labellogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atclog"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        android:text="@string/login"
        android:textColor="@color/purple_700"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="455dp"
        />


    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/labellogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/box"
        android:drawableLeft="@drawable/emailicon"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/box"
        android:hint="Password"
        android:paddingStart="10dp"
        android:inputType="textPassword"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:text="forget password?"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="455dp"
        android:layout_alignRight="@+id/pass"
        />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerInParent="true"
        android:layout_marginTop="23dp"
        android:text="@string/create_an_account"
        android:clickable="true"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="455dp"
        android:focusable="true" />
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/mycolor"
        android:drawableRight="@drawable/iconlogout"
        android:minHeight="32dp"
        android:minWidth="305dp"
        android:text="@string/log_in"
        android:textSize="30sp"
        tools:ignore="TextContrastCheck"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="520dp"
        android:layout_marginStart="55dp"
        />



</RelativeLayout>